<%- include("partials/header") %>

<style>
    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        background: linear-gradient(to bottom right, #ECFDF5, #D1FAE5);
    }

    .content-wrapper {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 20px;
    }

    .success-card {
        width: 80%; /* Makes the card wide */
        max-width: 1200px; /* Limits max width for large screens */
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 40px;
        text-align: center;
    }

    @media (max-width: 768px) {
        .success-card {
            width: 95%; /* Adjusts width for smaller screens */
            padding: 24px;
        }
    }
</style>

<body>
    <div class="content-wrapper">
        <div class="success-card">
            <!-- Animated Checkmark -->
            <div class="flex justify-center items-center py-6">
                <div class="bg-green-100 p-4 rounded-full animate-bounce">
                    <svg class="w-16 h-16 text-green-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
            </div>

            <!-- Success Message -->
            <h2 class="text-4xl font-bold text-gray-800">Payment Successful!</h2>
            <p class="text-gray-600 mt-2 text-lg">Your order has been placed successfully. Thank you for shopping with us!</p>

            <!-- Order Summary -->
            <div class="bg-gray-50 p-6 rounded-lg mt-6 border border-gray-100">
                <h3 class="text-sm uppercase text-gray-500 font-medium">Order Details</h3>
                <div class="flex items-center text-gray-600 mt-2">
                    <span>Order #:</span>
                    <span class="font-semibold text-lg"><%= order.orderId %></span>
                </div>
                <div class="flex  items-center text-gray-600 mt-1">
                    <span>Date:</span>
                    <span class="font-semibold text-lg"><%= new Date().toLocaleDateString() %></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex justify-center space-x-6">
                <a href="/user/orderDetails?id=<%= orderId %>" 
                    class="px-6 py-3 bg-green-500 hover:bg-green-600 text-white font-medium rounded-lg transition-all duration-200 shadow-md text-lg">
                    View Order
                </a>

                <a href="/user/shop" 
                    class="px-6 py-3 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium rounded-lg text-lg shadow-md">
                    Continue Shopping
                </a>
            </div>

            <!-- Support Link -->
            <div class="mt-6 text-sm text-gray-500">
                Need help? <a href="#" class="text-green-600 hover:text-green-800 font-medium">Contact Support</a>
            </div>
        </div>
    </div>
</body>

<%- include("partials/footer") %>
