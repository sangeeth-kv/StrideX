<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    },
                    boxShadow: {
                        'input': '0 1px 2px 0 rgba(0, 0, 0, 0.05)',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <!-- Card Container -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-primary-600 to-primary-700 px-6 py-5">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-white">Edit Address</h2>
                    <div class="h-10 w-10 bg-white/20 rounded-full flex items-center justify-center">
                        <i class="fas fa-map-marker-alt text-white"></i>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="p-6">
                <form  class="space-y-6">
                    <!-- Two Column Layout for Desktop -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Personal Information -->
                        <div class="space-y-4">
                            <div>
                                <label for="fullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-user text-gray-400"></i>
                                    </div>
                                    <input 
                                        type="text" 
                                        id="fullName"
                                        name="name" 
                                        value="<%= address.name %>" 
                                        placeholder="Enter your full name" 
                                      
                                        class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                    />
                                    <p id="fullNameError" class="text-red-500 text-sm mt-1 hidden"></p>
                                </div>
                            </div>

                            <div>
                                <label for="phoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-phone text-gray-400"></i>
                                    </div>
                                    <input 
                                        type="text" 
                                        id="phoneNumber"
                                        name="phoneNumber" 
                                        value="<%= address.mobile_number %>" 
                                        placeholder="Enter your phone number" 
                                     
                                        class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                    />
                                    <p id="phoneNumberError" class="text-red-500 text-sm mt-1 hidden"></p>
                                </div>
                            </div>

                            <div>
                                <div class="space-y-1">
                                    <label class="block text-sm font-medium text-gray-700">Address Type</label>
                                    <p id="typeError" class="text-red-500 text-sm mt-1 hidden"></p>
                                    <select id="type" name="addressType"
                                        class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                        <option value="Home">Home</option>
                                        <option value="Work">Work</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Location Information -->
                        <div class="space-y-4">
                            <div>
                                <label for="pincode" class="block text-sm font-medium text-gray-700 mb-1">Pincode</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-map-pin text-gray-400"></i>
                                    </div>
                                    <input 
                                        type="text" 
                                        id="pincode"
                                        name="pincode" 
                                        value="<%= address.pinCode %>" 
                                        placeholder="Enter your pincode" 
                                        
                                        class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                    />
                                    <p id="pincodeError" class="text-red-500 text-sm mt-1 hidden"></p>
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label for="city" class="block text-sm font-medium text-gray-700 mb-1">City</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fas fa-city text-gray-400"></i>
                                        </div>
                                        <input 
                                            type="text" 
                                            id="city"
                                            name="city" 
                                            value="<%= address.city %>" 
                                            placeholder="City" 
                                         
                                            class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                        />
                                        <p id="cityError" class="text-red-500 text-sm mt-1 hidden"></p>
                                    </div>
                                </div>

                                <div>
                                    <label for="state" class="block text-sm font-medium text-gray-700 mb-1">State</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fas fa-map text-gray-400"></i>
                                        </div>
                                        <input 
                                            type="text" 
                                            id="state"
                                            name="state" 
                                            value="<%= address.state %>" 
                                            placeholder="State" 
                                            
                                            class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                        />
                                        <p id="stateError" class="text-red-500 text-sm mt-1 hidden"></p>
                                        
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label for="landmark" class="block text-sm font-medium text-gray-700 mb-1">District</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <i class="fas fa-landmark text-gray-400"></i>
                                    </div>
                                    <input 
                                        type="text" 
                                        id="landmark"
                                        name="landmark" 
                                        value="<%= address.district %>" 
                                        placeholder="District" 
                                        class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                    />
                                    <p id="landmarkError" class="text-red-500 text-sm mt-1 hidden"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Full Width Fields -->
                    <div class="space-y-4">
                        <div>
                            <label for="address" class="block text-sm font-medium text-gray-700 mb-1">Complete Address</label>
                            <div class="relative">
                                <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                                    <i class="fas fa-home text-gray-400"></i>
                                </div>
                                <textarea 
                                    id="address"
                                    name="address" 
                                    placeholder="Enter your complete address" 
                                  
                                    class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg shadow-input focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors min-h-[100px] resize-none"
                                ><%= address.address %></textarea>
                                <p id="addressError" class="text-red-500 text-sm mt-1 hidden"></p>
                            </div>
                        </div>

                        <div>
                            <label for="country" class="block text-sm font-medium text-gray-700 mb-1">Country</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-globe text-gray-400"></i>
                                </div>
                                <input 
                                    type="text" 
                                    id="country"
                                    name="country" 
                                    value="<%=address.country%>" 
                                    disabled 
                                    class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700 cursor-not-allowed"
                                />
                                <p id="countryError" class="text-red-500 text-sm mt-1 hidden"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex justify-end space-x-4 pt-4">
                        <a href="/user/view-profile/<%=userId%>" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium">
                            Cancel
                        </a>
                        <button 
                            type="submit" 
                            class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium flex items-center"
                        >
                            <i class="fas fa-save mr-2"></i>
                            Update Address
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<!-- Toastify CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<!-- Toastify JS -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<script>
    document.querySelector("form").addEventListener("submit",async function (e) {
        e.preventDefault()

       
    // Hide all previous error messages
    document.querySelectorAll(".text-red-500").forEach(el => el.classList.add("hidden"));

let isValid = true;

function showError(id, message) {
    const errorElement = document.getElementById(id);
    if (errorElement) {
        errorElement.textContent = message;
        errorElement.classList.remove("hidden");
    }
    isValid = false;
}

function validateField(id, message) {
    const value = document.getElementById(id).value.trim();
    if (!value) showError(id + "Error", message);
}

function validateName(id) {
    const value = document.getElementById(id).value.trim();
    if (!value) {
        showError(id + "Error", "Name is required");
    } else if (!/^[A-Za-z\s]+$/.test(value)) {
        showError(id + "Error", "Enter a valid name (only letters allowed)");
    }
}

function validatePhone(id,message) {
    const value = document.getElementById(id).value.trim();
    if (!value) {
        showError(id + "Error", "Phone number is required");
    } else if (!/^\d{10}$/.test(value)) {
        showError(id + "Error", "Enter a valid 10-digit phone number");
    }
}
function validatePincode(id) {
    const value = document.getElementById(id).value.trim();
    if (!/^\d{6}$/.test(value)) {
        showError(id + "Error", "Enter a valid 6-digit pincode");
    }
}

function validateCityState(id, message) {
    const value = document.getElementById(id).value.trim();
    if (!/^[A-Za-z\s]+$/.test(value)) {
        showError(id + "Error", message);
    }
}
function validateDistrict(id, message) {
    const value = document.getElementById(id).value.trim();
    if (!/^[A-Za-z\s]+$/.test(value)) {
        showError(id + "Error", message);
    }
}

// Validate required fields
validateName("fullName","Enter a valid name");
validatePhone("phoneNumber","Enter valid Phone number");
validatePincode("pincode");
validateCityState("city", "Enter a valid city name");
validateCityState("state", "Enter a valid state name");
validateField("address", "Complete Address is required");
validateDistrict("landmark", "Enter valid district");

// Stop form submission if validation fails
if (!isValid) return;

        
        const formData=new FormData(this)
        const jsonData = Object.fromEntries(formData.entries());
        const addressId = "<%= address._id %>"; 

        try {
            const response = await fetch(`/user/edit-address/${addressId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(jsonData),
    });

    const data= await response.json();
    console.log(data);
    
    if(response.ok){
        document.getElementById("fullName").value = data.address.name;
        document.getElementById("phoneNumber").value = data.address.mobile_number;
        document.getElementById("pincode").value = data.address.pinCode;
        document.getElementById("city").value = data.address.city;
        document.getElementById("state").value = data.address.state;
        document.getElementById("landmark").value = data.address.district;
        document.getElementById("address").value = data.address.address;
        Toastify({
                    text: "Address updated successfully!",
                    duration: 3000, // Show for 3 seconds
                    gravity: "bottom", // Position at the bottom
                    position: "center", // Centered horizontally
                    backgroundColor: "#0ea5e9", // Primary blue color
                    className: "rounded-lg shadow-lg text-white px-4 py-2 text-sm",
                    stopOnFocus: true // Prevent dismissing on hover
                }).showToast();
                if (document.referrer) window.location.href = document.referrer;                 
        }else{
        Toastify({
                    text: data.message || "Failed to update address.",
                    duration: 3000,
                    gravity: "bottom",
                    position: "center",
                    backgroundColor: "#e53e3e", // Red for error
                    className: "rounded-lg shadow-lg text-white px-4 py-2 text-sm",
                }).showToast();
        }


        } catch (error) {
            console.log(error)
        }
    })
</script>