<%- include("partials/header") %>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100">
    <div class="container mx-auto px-4 py-8">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">My Account</h1>
            <p class="mt-2 text-sm text-gray-600">Manage your profile, orders, and preferences</p>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Enhanced Sidebar -->
            <div class="lg:w-80">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden sticky top-8">
                    <div class="p-6 bg-gradient-to-br from-emerald-600 to-emerald-700 text-white relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-32 h-32 transform translate-x-8 -translate-y-8">
                            <div class="w-full h-full bg-white/10 rounded-full"></div>
                        </div>
                        <div class="relative flex items-center gap-4">
                            <div class="w-16 h-16 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center border-2 border-white/30">
                                <i class="fas fa-user text-2xl"></i>
                            </div>
                            <div>
                                <h2 class="font-bold text-lg">Welcome Back</h2>
                                <p class="text-sm text-emerald-100">Manage your account</p>
                            </div>
                        </div>
                    </div>

                    <nav class="p-4">
                        <div class="space-y-1">
                            <a href="#dashboard" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-700 hover:text-emerald-600 hover:bg-emerald-50 transition-all duration-200">
                                <i class="fas fa-home w-5 text-center"></i>
                                <span class="font-medium">Dashboard</span>
                            </a>
                            <a href="#address" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-700 hover:text-emerald-600 hover:bg-emerald-50 transition-all duration-200">
                                <i class="fas fa-map-marker-alt w-5 text-center"></i>
                                <span class="font-medium">My Addresses</span>
                            </a>
                            <a href="#orders" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-700 hover:text-emerald-600 hover:bg-emerald-50 transition-all duration-200">
                                <i class="fas fa-shopping-bag w-5 text-center"></i>
                                <span class="font-medium">Orders</span>
                            </a>
                            <a href="#wallet" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-700 hover:text-emerald-600 hover:bg-emerald-50 transition-all duration-200">
                                <i class="fas fa-wallet w-5 text-center"></i>
                                <span class="font-medium">Wallet</span>
                            </a>
                            <a href="#wallet-history" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-700 hover:text-emerald-600 hover:bg-emerald-50 transition-all duration-200">
                                <i class="fas fa-history w-5 text-center"></i>
                                <span class="font-medium">Transaction History</span>
                            </a>
                            <a href="#referal" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-700 hover:text-emerald-600 hover:bg-emerald-50 transition-all duration-200">
                                <i class="fas fa-users w-5 text-center"></i>
                                <span class="font-medium">Referrals</span>
                            </a>
                        </div>

                        <div class="mt-4 pt-4 border-t">
                            <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-xl text-red-600 hover:bg-red-50 transition-all duration-200">
                                <i class="fas fa-sign-out-alt w-5 text-center"></i>
                                <span class="font-medium">Logout</span>
                            </a>
                        </div>
                    </nav>
                </div>
            </div>

            <!-- Enhanced Content Area -->
            <div class="flex-1 space-y-8">
                <!-- Profile Section -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden" id="dashboard">
                    <div class="p-6 border-b">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-bold text-gray-900">Profile Information</h2>
                            <button onclick="openChangePasswordModal()" class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-all duration-200">
                                <i class="fas fa-key text-sm"></i>
                                <span class="text-sm font-medium">Change Password</span>
                            </button>
                        </div>
                    </div>

                    <div class="p-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <!-- Phone Number -->
                            <div class="bg-gray-50 rounded-xl p-4">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">Phone Number</p>
                                        <div class="text-lg font-medium flex items-center gap-2">
                                            <i class="fas fa-phone text-emerald-600"></i>
                                            <%= user.phoneNumber ? user.phoneNumber : "No phone number provided" %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="bg-gray-50 rounded-xl p-4">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">Email Address</p>
                                        <div class="text-lg font-medium flex items-center gap-2">
                                            <i class="fas fa-envelope text-emerald-600"></i>
                                            <%= user.email ? user.email : "No Email address provided" %>
                                        </div>
                                    </div>
                                    <button onclick="confirmEmailChange('<%= user.id %>')" 
                                            class="inline-flex items-center gap-2 px-3 py-2 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-all duration-200">
                                        <i class="fas fa-edit text-sm"></i>
                                        <span class="text-sm font-medium">Change</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Address Section -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden" id="address">
                    <div class="p-6 border-b">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-bold text-gray-900">My Addresses</h2>
                            <a href="/user/add-address/<%=user.id%>" 
                               class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-all duration-200">
                                <i class="fas fa-plus text-sm"></i>
                                <span class="text-sm font-medium">Add New Address</span>
                            </a>
                        </div>
                    </div>

                    <div class="p-6">
                        <% if (addresses.length > 0) { %>
                            <div class="grid md:grid-cols-2 gap-6">
                                <% addresses.forEach(address => { %>
                                    <div class="bg-gray-50 rounded-xl p-6 relative group">
                                        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                                            <div class="flex items-center gap-2">
                                                <a href="/user/edit-address/<%= address._id %>" 
                                                   class="p-2 bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200 transition-colors">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button onclick="deleteAddress('<%= address._id %>')" 
                                                        class="p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition-colors">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>

                                        <div class="space-y-3">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center">
                                                    <i class="fas fa-home text-emerald-600"></i>
                                                </div>
                                                <h3 class="font-medium text-lg"><%= address.name %></h3>
                                            </div>
                                            
                                            <div class="space-y-1 text-gray-600">
                                                <p><%= address.address %></p>
                                                <p><%= address.city %>, <%= address.state %> <%= address.pinCode %></p>
                                                <p class="flex items-center gap-2">
                                                    <i class="fas fa-phone text-sm"></i>
                                                    <%= address.mobile_number %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-12">
                                <div class="w-16 h-16 bg-gray-100 rounded-full mx-auto flex items-center justify-center mb-4">
                                    <i class="fas fa-map-marker-alt text-gray-400 text-xl"></i>
                                </div>
                                <h3 class="text-gray-500 mb-2">No addresses added yet</h3>
                                <p class="text-sm text-gray-400">Add your first address to get started</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Orders Section -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden" id="orders">
                    <div class="p-6 border-b">
                        <h2 class="text-xl font-bold text-gray-900">Order History</h2>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-50">
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Order ID</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Date</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Status</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Total</th>
                                    <th class="px-6 py-4 text-right text-sm font-semibold text-gray-600">Action</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 text-sm text-gray-600">Order #</td>
                                    <td class="px-6 py-4 text-sm text-gray-600">--</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                            Pending
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-600">₹0.00</td>
                                    <td class="px-6 py-4 text-right">
                                        <button class="inline-flex items-center gap-2 px-3 py-1.5 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-colors text-sm">
                                            <i class="fas fa-eye"></i>
                                            View Details
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Wallet & Referral Section -->
                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Wallet Card -->
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden" id="wallet">
                        <div class="p-6 border-b">
                            <div class="flex items-center justify-between">
                                <h2 class="text-xl font-bold text-gray-900">Wallet Balance</h2>
                                <button class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-all duration-200">
                                    <i class="fas fa-plus text-sm"></i>
                                    <span class="text-sm font-medium">Add Money</span>
                                </button>
                            </div>
                        </div>

                        <div class="p-6">
                            <div class="bg-gradient-to-br from-emerald-600 to-emerald-700 rounded-xl p-6 text-white relative overflow-hidden">
                                <div class="absolute top-0 right-0 w-32 h-32 transform translate-x-8 -translate-y-8">
                                    <div class="w-full h-full bg-white/10 rounded-full"></div>
                                </div>
                                <div class="relative">
                                    <p class="text-emerald-100 mb-2">Available Balance</p>
                                    <h3 class="text-4xl font-bold">₹0.00</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Referral Card -->
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden" id="referal">
                        <div class="p-6 border-b">
                            <h2 class="text-xl font-bold text-gray-900">Referral Program</h2>
                        </div>

                        <div class="p-6">
                            <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl p-6 text-white relative overflow-hidden">
                                <div class="absolute top-0 right-0 w-32 h-32 transform translate-x-8 -translate-y-8">
                                    <div class="w-full h-full bg-white/10 rounded-full"></div>
                                </div>
                                
                                <div class="relative space-y-4">
                                    <div>
                                        <p class="text-orange-100 mb-1">Your Referral Code</p>
                                        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-3 flex items-center justify-between">
                                            <code class="text-lg font-mono">FRIEND50</code>
                                            <button class="p-2 hover:bg-white/20 rounded-lg transition-colors">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="flex items-center gap-4">
                                        <div class="flex-1">
                                            <p class="text-orange-100 text-sm">Total Earned</p>
                                            <p class="text-2xl font-bold">₹0.00</p>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-orange-100 text-sm">Referrals</p>
                                            <p class="text-2xl font-bold">0</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Wallet History -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden" id="wallet-history">
                    <div class="p-6 border-b">
                        <h2 class="text-xl font-bold text-gray-900">Transaction History</h2>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-50">
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Date</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Transaction ID</th>
                                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Type</th>
                                    <th class="px-6 py-4 text-right text-sm font-semibold text-gray-600">Amount</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 text-sm text-gray-600">--</td>
                                    <td class="px-6 py-4 text-sm text-gray-600">--</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                                            Credit
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right text-sm font-medium text-emerald-600">₹0.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Password Change Modal -->
<div id="changePasswordModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="min-h-screen px-4 text-center">
        <!-- This element is to trick the browser into centering the modal contents. -->
        <span class="inline-block h-screen align-middle" aria-hidden="true">&#8203;</span>
        
        <div class="inline-block w-full max-w-md p-6 my-8 text-left align-middle transition-all transform bg-white shadow-xl rounded-2xl">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-bold text-gray-900">Change Password</h3>
                <button onclick="closeChangePasswordModal()" class="text-gray-400 hover:text-gray-500">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="space-y-4">
                <div>
                    <label for="currentPassword" class="block text-sm font-medium text-gray-700 mb-1">
                        Current Password
                    </label>
                    <input type="password" 
                           id="currentPassword" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors" 
                           placeholder="Enter your current password">
                </div>

                <div class="flex items-center justify-end space-x-3 mt-6">
                    <button onclick="closeChangePasswordModal()" 
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                        Cancel
                    </button>
                    <button onclick="verifyPassword()" 
                            class="px-4 py-2 text-sm font-medium text-white bg-emerald-600 rounded-lg hover:bg-emerald-700 transition-colors">
                        Verify & Continue
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<script>
    // Your existing JavaScript code remains unchanged
    function deleteAddress(addressId) {
        Swal.fire({
            title: "Are you sure?",
            text: "This address will be permanently deleted!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/user/delete-address/${addressId}`, { method: "DELETE" })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                          Toastify({
                          text: "Address deleted successfully!",
                          duration: 3000,
                          close: true,
                          gravity: "top",
                          position: "right",
                          backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                          stopOnFocus: true,
                          }).showToast()
                          setTimeout(() => location.reload(), 2000);
                        } else {
                            Swal.fire("Error!", data.message, "error");
                        }
                    })
                    .catch(error => console.error("Error:", error));
            }
        });
    }

    function openChangePasswordModal() {
        document.getElementById('changePasswordModal').classList.remove('hidden');
    }

    function closeChangePasswordModal() {
        document.getElementById('changePasswordModal').classList.add('hidden');
    }

    async function verifyPassword() {
        const currentPassword = document.getElementById('currentPassword').value;
        
        if (!currentPassword) {
            Swal.fire("Error", "Please enter your current password", "error");
            return;
        }

        try {
            const response = await fetch('/user/verify-current-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ password: currentPassword })
            });
            
            const data = await response.json();
            
            if (data.success) {
                Toastify({
                    text: "✅ Password verified successfully!",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                    stopOnFocus: true,
                }).showToast();

                setTimeout(() => {
                    window.location.href = "/user/change-user-password-otp";
                }, 3000);
            } else {
                Toastify({
                    text: `❌ ${data.message}`,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)",
                    stopOnFocus: true,
                }).showToast();
            }
        } catch (error) {
            console.error(error);
        }
    }

    function confirmEmailChange(userId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to change your email?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, change it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/user/change-email-otp/${userId}`;
            }
        });
    }
</script>

