<script>

function submitReferralCode() {
        const referralCode = document.getElementById('otherReferralCode').value.trim();
        const responsePara = document.getElementById('referralResponse');

        if (referralCode === '') {
            responsePara.textContent = 'Please enter a referral code.';
            responsePara.classList.add('text-red-500');
            return;
        }

        fetch('/user/apply-referral', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                 
            },
            body: JSON.stringify({ referralCode })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                responsePara.textContent = 'Referral code applied successfully!';
                responsePara.classList.remove('text-red-500');
                responsePara.classList.add('text-green-500');
                setTimeout(()=>{
                    location.reload()
                },1000)
            } else {
                responsePara.textContent = data.message || 'Failed to apply referral code.';
                responsePara.classList.remove('text-green-500');
                responsePara.classList.add('text-red-500');
            }
        })
        .catch(err => {
            console.error(err);
            responsePara.textContent = 'Error applying referral code.';
            responsePara.classList.add('text-red-500');
        });
    }
function showAllOrders() {
    // Show all the hidden orders
    document.querySelectorAll('.extra-order').forEach(function(order) {
        order.classList.remove('hidden');
    });
    
    // Hide the "See All" button row
    document.getElementById('seeAllRow').classList.add('hidden');
    
    // Show the "Show Less" button row
    document.getElementById('showLessRow').classList.remove('hidden');
}

function showLessOrders() {
    // Hide all orders beyond the first 5
    document.querySelectorAll('.extra-order').forEach(function(order) {
        order.classList.add('hidden');
    });
    
    // Show the "See All" button row
    document.getElementById('seeAllRow').classList.remove('hidden');
    
    // Hide the "Show Less" button row
    document.getElementById('showLessRow').classList.add('hidden');
    
    // Scroll back to the orders section
    document.getElementById('orders').scrollIntoView({ behavior: 'smooth' });
}
//copy
function copyReferral() {
    const referralInput = document.getElementById("refId");

    // Copy to clipboard
    navigator.clipboard.writeText(referralInput.value).then(() => {
        // Show success message
        const successMessage = document.getElementById("copySuccess");
        successMessage.classList.remove("hidden");

        // Hide message after 2 seconds
        setTimeout(() => {
            successMessage.classList.add("hidden");
        }, 2000);
    }).catch(err => {
        console.error("Failed to copy: ", err);
    });
}

//search
function searchOrders() {
        const searchValue = document.getElementById("searchInput").value.trim().toLowerCase();
        const rows = document.querySelectorAll(".order-row");

        rows.forEach(row => {
            const orderId = row.querySelector("td").textContent.toLowerCase();
            if (orderId.includes(searchValue)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }

    function clearSearch() {
        document.getElementById("searchInput").value = "";
        document.querySelectorAll(".order-row").forEach(row => row.style.display = "");
    }
    //proflie image

    document.getElementById("profileContainer").addEventListener("click", function() {
    document.getElementById("imageUpload").click();
});

document.getElementById("imageUpload").addEventListener("change", function(event) {
    const file = event.target.files[0]; // Get the selected file
    if (file) {
        // Display the image preview
        const reader = new FileReader();
        reader.onload = function () {
            document.getElementById("profileImage").src = reader.result;
        };
        reader.readAsDataURL(file);

        // Send the image to the backend
        uploadImage(file);
    }
});

function uploadImage(file) {
    const formData = new FormData();
    formData.append("profileImage", file); // Append the file

    fetch("/user/upload-profile-image", {
        method: "POST",
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        console.log("Upload Success:", data);
        Toastify({
                    text: "Profile picture updated !",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                    stopOnFocus: true,
                }).showToast();
    })
    .catch(error => {
        console.error("Upload Error:", error);
        alert("Failed to upload profile image.");
    });
}

    // Your existing JavaScript code remains unchanged
    function deleteAddress(addressId) {
        Swal.fire({
            title: "Are you sure?",
            text: "This address will be permanently deleted!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/user/delete-address/${addressId}`, { method: "DELETE" })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                          Toastify({
                          text: "Address deleted successfully!",
                          duration: 3000,
                          close: true,
                          gravity: "top",
                          position: "right",
                          backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                          stopOnFocus: true,
                          }).showToast()
                          setTimeout(() => location.reload(), 2000);
                        } else {
                            Swal.fire("Error!", data.message, "error");
                        }
                    })
                    .catch(error => console.error("Error:", error));
            }
        });
    }

    function openChangePasswordModal() {
        document.getElementById('changePasswordModal').classList.remove('hidden');
    }

    function closeChangePasswordModal() {
        document.getElementById('changePasswordModal').classList.add('hidden');
    }

    async function verifyPassword() {
        const currentPassword = document.getElementById('currentPassword').value;
        
        if (!currentPassword) {
            Swal.fire("Error", "Please enter your current password", "error");
            return;
        }

        try {
            const response = await fetch('/user/verify-current-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ password: currentPassword })
            });
            
            const data = await response.json();
            
            if (data.success) {
                Toastify({
                    text: "✅ Password verified successfully!",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                    stopOnFocus: true,
                }).showToast();

                setTimeout(() => {
                    window.location.href = "/user/change-user-password-otp";
                }, 3000);
            } else {
                Toastify({
                    text: `❌ ${data.message}`,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)",
                    stopOnFocus: true,
                }).showToast();
            }
        } catch (error) {
            console.error(error);
        }
    }

    function confirmEmailChange(userId) {
