    <style>
        .logout-container {
            display: flex;
            justify-content: flex-end;
            padding: 10px;
        }

        .logout-btn {
            padding: 10px 20px;
            background-color: #d9534f;
            color: white;
            font-weight: bold;
            text-decoration: none;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.2s;
        }

        .logout-btn:hover {
            background-color: #c9302c;
            transform: scale(1.05);
        }

        body {
            background-color: #f3f4f6;
        }
        .navbar {
            background-color: #0b5082;
        }
        .navbar-aside {
            background-color: #0b5082;
        }
        .menu-item a.menu-link {
            color: #fbf8f8;
        }

        .menu-item a.menu-link:hover{
            background-color: #22de225f; 
            color: #ffffff;
        }
        .menu-item a.menu-link.active {
            background-color: #133013; 
            color: #ffffff;
        }
        .dropdown-menu {
            background-color: #bb9aaf;
        }

        .dropdown-item:hover {
            background-color: #f8f7f9;
            color: #ffffff;
        }

        /* Status Badge Styles */
        .status-badge {
            @apply px-3 py-1 rounded-full text-xs font-medium;
        }
        .status-pending {
            @apply bg-yellow-100 text-yellow-800;
        }
        .status-processing {
            @apply bg-blue-100 text-blue-800;
        }
        .status-shipped {
            @apply bg-indigo-100 text-indigo-800;
        }
        .status-delivered {
            @apply bg-green-100 text-green-800;
        }
        .status-cancelled {
            @apply bg-red-100 text-red-800;
        }
        .status-return {
            @apply bg-purple-100 text-purple-800;
        }

        /* Responsive styles */
        @media (max-width: 768px) {
            .navbar-aside {
                width: 100%;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
                position: fixed;
                top: 0;
                left: 0;
                height: 100%;
                z-index: 40;
            }
            
            .navbar-aside.show {
                transform: translateX(0);
            }
            
            .main-wrap {
                margin-left: 0 !important;
                width: 100%;
            }
            
            .menu-aside {
                padding: 1rem;
            }
            
            .aside-top {
                padding: 1rem;
            }
            
            .mobile-menu-btn {
                display: block !important;
            }
        }
        
        @media (min-width: 769px) {
            .navbar-aside {
                width: 250px;
                position: fixed;
                top: 0;
                left: 0;
                height: 100%;
                z-index: 40;
            }
            
            .main-wrap {
                margin-left: 250px;
                width: calc(100% - 250px);
            }
            
            .mobile-menu-btn {
                display: none !important;
            }
            
            .navbar-aside.minimized {
                width: 80px;
            }
            
            .navbar-aside.minimized .menu-item span.text {
                display: none;
            }
            
            .navbar-aside.minimized + .main-wrap {
                margin-left: 80px;
                width: calc(100% - 80px);
            }
        }
        
        .screen-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 30;
            display: none;
        }
        
        .screen-overlay.show {
            display: block;
        }
        
        .menu-item {
            margin-bottom: 0.5rem;
        }
        
        .menu-link {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .menu-link i {
            margin-right: 10px;
        }
    </style>
</head>
