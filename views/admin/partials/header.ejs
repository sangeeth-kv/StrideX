    <script>
        $(document).ready(function () {
            // Get the current URL path
            var currentPath = window.location.pathname;
        
            // Loop through each menu item and check if the href matches the current path
            $(".menu-item a.menu-link").each(function () {
                if ($(this).attr("href") === currentPath) {
                    $(this).addClass("active");
                }
            });
            
            // Mobile menu toggle
            $(".mobile-menu-btn").click(function() {
                $(".navbar-aside").toggleClass("show");
                $(".screen-overlay").toggleClass("show");
            });
            
            // Close menu when clicking on overlay
            $(".screen-overlay").click(function() {
                $(".navbar-aside").removeClass("show");
                $(".screen-overlay").removeClass("show");
            });
            
            // Sidebar minimize toggle
            $(".btn-aside-minimize").click(function() {
                if ($(window).width() > 768) {
                    $(".navbar-aside").toggleClass("minimized");
                    $(".main-wrap").toggleClass("ml-minimal");
                } else {
                    $(".navbar-aside").removeClass("show");
                    $(".screen-overlay").removeClass("show");
                }
            });
            
            // Close menu on window resize if screen becomes larger
            $(window).resize(function() {
                if ($(window).width() > 768) {
                    $(".navbar-aside").removeClass("show");
                    $(".screen-overlay").removeClass("show");
                }
            });
        });
    </script>
