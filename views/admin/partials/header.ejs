        /* Responsive styles */
        @media (max-width: 768px) {
            .navbar-aside {
                width: 100%;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
                position: fixed;
                top: 0;
                left: 0;
                height: 100%;
                z-index: 40;
            }
            
            .navbar-aside.show {
                transform: translateX(0);
            }
            
            .main-wrap {
                margin-left: 0 !important;
                width: 100%;
            }
            
            .menu-aside {
                padding: 1rem;
            }
            
            .aside-top {
                padding: 1rem;
            }
            
            .mobile-menu-btn {
                display: block !important;
            }
        }
        
        @media (min-width: 769px) {
            .navbar-aside {
                width: 250px;
                position: fixed;
                top: 0;
                left: 0;
                height: 100%;
                z-index: 40;
            }
            
            .main-wrap {
                margin-left: 250px;
                width: calc(100% - 250px);
            }
            
            .mobile-menu-btn {
                display: none !important;
            }
            
            .navbar-aside.minimized {
                width: 80px;
            }
            
            .navbar-aside.minimized .menu-item span.text {
                display: none;
            }
            
            .navbar-aside.minimized + .main-wrap {
                margin-left: 80px;
                width: calc(100% - 80px);
            }
        }
        
        .screen-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 30;
            display: none;
        }
        
        .screen-overlay.show {
            display: block;
        }
        
        .menu-item {
            margin-bottom: 0.5rem;
        }
        
        .menu-link {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .menu-link i {
            margin-right: 10px;
        }
