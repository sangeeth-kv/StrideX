<!DOCTYPE HTML>
<html lang="en">

<%- include("partials/head") %>

<body class="bg-gray-100">
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="/admin/dashboard" class="brand-wrap">
                <img src="/admin/imgs/theme/logo.svg" class="logo" alt="Evara Dashboard">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> <i class="text-muted material-icons md-menu_open"></i> </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link" href="/admin/dashboard"> <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item has-submenu active">
                    <a class="menu-link" href="/admin/products"> <i class="icon material-icons md-shopping_bag"></i>
                        <span class="text">Products</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/category"> <i class="icon material-icons md-category"></i>
                        <span class="text">Category</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/brands"> <i class="icon material-icons md-stars"></i>
                        <span class="text">Brands</span>
                    </a>
                </li>
            </ul>
            <hr>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link" href="/admin/settings"> <i class="icon material-icons md-settings"></i>
                        <span class="text">Settings</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>
    <main class="main-wrap p-6">
        <%- include("partials/header") %>

        <section class="bg-white p-6 rounded-lg shadow">
            <div class="flex justify-between items-center pb-4 border-b">
                <div>
                    <h2 class="text-xl font-semibold">Products Table</h2>
                    <p class="text-gray-500 text-sm">Manage your products easily</p>
                </div>
                <a href="/admin/addproducts" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Add New Product</a>
            </div>
            <div class="overflow-x-auto mt-4">
                <table class="w-full border-collapse border border-gray-200">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="border p-3">Image</th>
                            <th class="border p-3">Product Name</th>
                            <th class="border p-3">Price</th>
                            <th class="border p-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% product.forEach(product => { %>
                        <tr class="text-center">
                            <td class="border p-3"><img src="<%= product.image %>" alt="<%= product.name %>" class="w-16 h-16 object-cover"></td>
                            <td class="border p-3"><%= product.name %></td>
                            <td class="border p-3">$<%= product.price %></td>
                            <td class="border p-3">
                                <a href="#" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded">Edit</a>
                                <a href="#" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
        <%- include("partials/footer") %>
    </main>
    <script src="/admin/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin/js/vendors/select2.min.js"></script>
    <script src="/admin/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin/js/main.js" type="text/javascript"></script>
</body>
</html>
